  .korean-font-title {
    @include App.dongle-font(2.4rem);
  }
  .korean-font-small-title {
    @include App.dongle-font(2.1rem);
    line-height: 0.8;
  }

  .japanese-font-title {
    @include App.potta-font(1.3rem);
    line-height: 2.5;
  }
  .japanese-font-small-title {
    @include App.potta-font(1.2rem);
    line-height: 1.3;
  }

  div.korean-font-title {
    @include App.dongle-font(2.4rem);
  }
  div.korean-font-small-title {
    @include App.dongle-font(2.1rem);
    line-height: 0.8;
  }

  div.japanese-font-title {
    @include App.potta-font(1.3rem);
    line-height: 2.5;
  }
  div.japanese-font-small-title {
    @include App.potta-font(1.2rem);
    line-height: 1.3;
  }
  div.japanese-font-content {
    @include App.potta-font(1rem);
    line-height: 3;
  }
}

