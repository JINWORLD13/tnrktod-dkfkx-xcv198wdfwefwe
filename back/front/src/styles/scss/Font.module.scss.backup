//! inapppurchase의 korean-dongle-font와 같다
.korean-font-title {
  @include App.dongle-font(3rem);
}
//! tarotmodal의 korean-dongle-font와 같다
.korean-font-small-title {
  @include App.dongle-font(2.3rem);
  line-height: 0.9;
}
