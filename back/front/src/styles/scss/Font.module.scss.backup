  @include App.dongle-font(2.2rem);
}
.korean-font-content-iap {
  @include App.dongle-font(2.2rem);
  line-height: 1.2;
}
//! tarotmodal의 korean-font-label과 같다
.korean-font-label {
  @include App.dongle-font(1.7rem);
  font-size: 1.7rem;
  line-height: 1;
}

.japanese-font-title {
  @include App.potta-font(1.5rem);
  line-height: 2.5;
}
